.l-badge {
  position: relative;
  display: inline-block;
  line-height: 0;
  vertical-align: middle;
  width: 100%;
}

.l-badge-content {
  max-width: 650rpx;
  left: 70%;
  color: #fff;
  position: absolute;
  font-size: 20rpx;
  display: inline-block;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  text-align: center;
  box-sizing: border-box;
  z-index: 10;
  letter-spacing: .5rpx
}

